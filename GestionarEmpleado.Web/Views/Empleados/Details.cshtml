@model GestionarEmpleado.Domain.EntitiesDto.EmpleadoDto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @if (Model.Fotografia != null)
                        {
                            <img src="data:image/png;base64,@(Convert.ToBase64String(Model.Fotografia))" alt="Imagen" class="resized-image" />
                        }
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" readonly class="form-control" />
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" readonly class="form-control" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="PuestoId" class="control-label"></label>
                    <select asp-for="PuestoId"
                            class="form-control" disabled
                            asp-items="@(new SelectList(ViewBag.Puestos,"Id", "Nombre"))">
                    </select>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" readonly class="form-control" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" type="date" disabled class="form-control" />
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="FechaContratacion" class="control-label"></label>
                    <input asp-for="FechaContratacion" type="date" disabled class="form-control" />
                </div>

            </div>

            <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" readonly class="form-control" />
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input asp-for="CorreoElectronico" readonly class="form-control " />
                </div>

            </div>
            <div class="row">

                <div class="col-md-6 form-group">
                    <label asp-for="EstadoId" class="control-label">Estado</label>
                    <select asp-for="EstadoId"
                            class="form-control" disabled
                            asp-items="@(new SelectList(ViewBag.Estados,"Id", "Nombre"))">
                    </select>

                </div>
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) |
    <a asp-action="Index">Back to List</a>
</div>
